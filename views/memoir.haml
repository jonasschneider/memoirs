.memoir{ :class => defined?(on_show_page) ? 'show' : '' }
  - if memoir.is_quote?
    %p.quote= memoir.quoted_text
  - else
    %p= memoir.text
  
  .details
    %a{ :href => "/show/#{memoir.id}"}== #{memoir.person} am #{format_date(memoir.created_at)}
    - if defined? on_show_page
      = facebook_like_button